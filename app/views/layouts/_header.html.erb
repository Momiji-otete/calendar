<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <%= link_to "Calendar", root_path, class: "navbar-brand p-3" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to plans_path, class: "nav-link" do %>
              <i class="fa-regular fa-calendar-check"></i>予定一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_plan_path, class: "nav-link" do %>
                <i class="fa-regular fa-calendar-plus"></i>予定追加
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
                <i class="fas fa-sign-out-alt"></i>ログアウト
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: "nav-link" do %>
                <i class="fas fa-sign-in-alt"></i>ログイン
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: "nav-link" do %>
                <i class="fas fa-user-plus"></i>新規登録
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="d-flex justify-content-first">
      <% if user_signed_in? %>
        <span class="bg-white p-2">ようこそ <%= current_user.name %> さん！</span>
      <% end %>
    </div>
  </div>
</header>